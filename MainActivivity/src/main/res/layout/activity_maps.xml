<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.example.sebastianlaverde.lukemapwalker.MainActivivity.MapsActivity">

    <Button
        android:id="@+id/toSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:alpha="0.75"
        android:background="@color/colorAccent"
        android:fadingEdge="horizontal|vertical"
        android:padding="0dp"
        android:text="Enter/Exit StreetView"
        android:textAllCaps="false"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playPause"
        android:layout_above="@id/toSV"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:alpha="0.75"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:contentDescription="Play/Pause"
        android:cursorVisible="false"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:drawableRight="@android:drawable/ic_media_pause"
        android:ellipsize="middle"
        android:fadingEdge="horizontal|vertical"
        android:paddingStart="22dp"
        android:paddingLeft="22dp"
        android:paddingTop="0dp"
        android:paddingEnd="22dp"
        android:paddingRight="22dp"
        android:paddingBottom="0dp" />

    <LinearLayout
        android:id="@+id/streetView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />


</RelativeLayout>